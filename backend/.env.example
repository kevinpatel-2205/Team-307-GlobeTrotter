# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (AWS RDS/Aurora PostgreSQL)
DATABASE_URL=postgres://username:password@your-aurora-cluster.cluster-xxxxx.us-east-1.rds.amazonaws.com:5432/globetrotter

# Alternative individual DB config (if not using DATABASE_URL)
# DB_HOST=your-aurora-cluster.cluster-xxxxx.us-east-1.rds.amazonaws.com
# DB_PORT=5432
# DB_NAME=globetrotter
# DB_USER=username
# DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# AWS Configuration (if using S3 for file storage later)
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=globetrotter-uploads
